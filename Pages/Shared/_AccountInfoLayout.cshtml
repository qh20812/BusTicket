@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username") ?? "Khách";
    var currentPath = HttpContextAccessor.HttpContext?.Request.Path.Value?.ToLower() ?? "";
    var avatarPath = HttpContextAccessor.HttpContext?.Session.GetString("AvatarPath") ?? "/images/logo2.png";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] | Tài khoản</title>
    <link rel="stylesheet" href="~/css/_adminlayout.css"> @* Bạn cần tạo file này dựa trên _adminlayout.css *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="icon" href="/images/logo5.png" type="image/png"/>
</head>
<body>
    <div class="sidebar">
        <a href="/Index" class="logo" style="text-decoration: none;">
            <i class='bx bx-bus'></i>
            <div class="logo-name"><span>Bus</span>Ticket</div>
        </a>
        <ul class="side-menu">
            <li class="@(currentPath.StartsWith("/forcustomer/myaccount") ? "active" : "")"><a href="/ForCustomer/MyAccount/Index"><i class='bx bx-user-circle'></i>Thông tin cá nhân</a></li>
            <li class="@(currentPath.StartsWith("/forcustomer/myorders") ? "active" : "")"><a href="/ForCustomer/MyOrders/Index"><i class='bx bx-receipt'></i>Đơn hàng của tôi</a></li>
            <li class="@(currentPath.StartsWith("/forcustomer/myreviews") ? "active" : "")"><a href="/ForCustomer/MyReviews/Index"><i class='bx bx-comment-edit'></i>Nhận xét chuyến đi</a></li>
        </ul>
        <ul class="side-menu">
            <li>
                <form asp-page="/Account/Logout/Index" method="post" style="width: 100%;">
                    <button type="submit" class="logout" style="border:none; background:none; padding-left: 20px; width: 100%; text-align: left; display: flex; align-items: center; gap: 10px; height: 48px;">
                        <i class='bx bx-log-out-circle'></i>
                        Đăng xuất
                    </button>
                </form>
            </li>
        </ul>
    </div>
    <div class="content">
        <nav>
            <i class='bx bx-menu'></i>
            @* Search form removed for customer layout, can be added back if needed *@
            <input type="checkbox" id="theme-toggle" hidden>
            <label for="theme-toggle" class="theme-toggle" title="Dark/Light Mode"></label>
            <a href="#" class="notif"> @* Customer notifications can be implemented here *@
                <i class='bx bx-bell'></i>
                @* <span >0</span> *@ @* Placeholder for customer notification count *@
            </a>
            <a href="/ForCustomer/MyAccount/Index" class="profile" title="Thông tin cá nhân">
                @* <img src="@Url.Content("~" + avatarPath)" alt="User Avatar" style="width: 36px; height: 36px; border-radius: 50%; object-fit: cover;"> *@
                <i class='bx bx-user-circle' style="font-size: 36px;"></i>
            </a>
        </nav>
        <main>
            @RenderBody()
        </main>
    </div>
    <script>
        const sideLinks = document.querySelectorAll('.sidebar .side-menu li a:not(.logout)');
        sideLinks.forEach(item => {
            const li = item.parentElement;
            item.addEventListener('click', () => {
                sideLinks.forEach(i => {
                    i.parentElement.classList.remove('active');
                })
                // Active class is set by server-side logic based on currentPath
            });
        });

        const menuBar = document.querySelector('.content nav .bx.bx-menu');
        const sideBar = document.querySelector('.sidebar');

        menuBar.addEventListener('click', () => {
            sideBar.classList.toggle('close');
        });

        window.addEventListener('resize', () => {
            if (window.innerWidth < 768) {
                sideBar.classList.add('close');
            } else {
                sideBar.classList.remove('close');
            }
        });

        const toggler = document.getElementById('theme-toggle');
        if (toggler) {
            toggler.addEventListener('change', function () {
                if (this.checked) {
                    document.body.classList.add('dark');
                } else {
                    document.body.classList.remove('dark');
                }
            });
        }
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>