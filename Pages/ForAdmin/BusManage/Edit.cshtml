@page "{id:int?}"
@model BusTicketSystem.Pages.ForAdmin.BusManage.EditModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = Model.BusInput.BusId == 0 ? "Thêm mới Xe buýt" : "Chỉnh sửa Xe buýt";
}

<div class="header">
    <div class="left">
        <h1>@ViewData["Title"]</h1>
        <ul class="breadcrumb">
            <li>
                <a href="/ForAdmin/Dashboard/Index" style="text-decoration: none;">Tổng quan</a>
            </li>/
            <li>
                <a href="/ForAdmin/BusManage/Index" style="text-decoration: none;">Phương tiện</a>
            </li>/
            <li>
                <a href="#" class="active" style="text-decoration: none;">@(Model.BusInput.BusId == 0 ? "Thêm mới" : "Chỉnh sửa")</a>
            </li>
        </ul>
    </div>
</div>

<div class="bottom-data">
    <div class="orders">
        <div class="header">
            <i class='bi bi-pencil-square bx'></i>
            <h3>@(Model.BusInput.BusId == 0 ? "Thông tin Xe buýt mới" : $"Thông tin Xe buýt: {Model.BusInput.LicensePlate}")</h3>
        </div>

        <form method="post" class="p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="BusInput.BusId" />

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="BusInput.LicensePlate" class="form-label"></label>
                        <input asp-for="BusInput.LicensePlate" class="form-control" />
                        <span asp-validation-for="BusInput.LicensePlate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="BusInput.BusType" class="form-label"></label>
                        <select asp-for="BusInput.BusType" class="form-select">
                            <option value="">-- Chọn loại xe --</option>
                            <option value="Giường nằm 2 tầng">Giường nằm 2 tầng</option>
                            <option value="Giường nằm 1 tầng">Giường nằm 1 tầng</option>
                            <option value="Ghế 2 tầng">Ghế 2 tầng</option>
                            <option value="Ghế 1 tầng">Ghế 1 tầng</option>
                        </select>
                        <span asp-validation-for="BusInput.BusType" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="BusInput.Capacity" class="form-label"></label>
                        <input asp-for="BusInput.Capacity" class="form-control" type="number" min="1" max="100" />
                        <span asp-validation-for="BusInput.Capacity" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="BusInput.CompanyId" class="form-label"></label>
                        <select asp-for="BusInput.CompanyId" asp-items="Model.Companies" class="form-select">
                            <option value="">-- Chọn công ty (nếu có) --</option>
                        </select>
                        <span asp-validation-for="BusInput.CompanyId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                <a asp-page="./Index" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}